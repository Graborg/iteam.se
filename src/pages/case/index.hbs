---
subtitle: Case
order: 1
layout: default.hbs
---

<div class="row">
  <div class="grid-full">
    <ul class="filters-list">
      {{#categories this}}
        {{#each data}}
        <li class="{{className @key}}" style="{{#unless this.visible}} display: none;{{/unless}}" >{{@key}}</li>
        {{/each}}
      {{/categories}}
      <li id="show-all" class="filters-options">
        <i class="ion-more"></i>
      </li>
      <li id="clear-all" class="filters-options>
        <i class="ion-close"></i>
      </li>
    </ul>
  </div>
</div>

<div class="row flex cases">
  <div class="grid-full">
    <ul class="cases-list">
      {{#pages '{}'}}
        {{#each data}}
          {{#unless frontmatter.unpublished }} 
            <li class="{{ frontmatter.categoriesHTMLFriendly }}"
            style="
              {{#if frontmatter.background}}
                background: {{ frontmatter.background }};
              {{/if}}
              {{#if frontmatter.color}}
                color: {{ frontmatter.color }};
              {{/if}}
            ">
              <a href="{{ url }}">
                {{ title }}
              </a>
            </li>
          {{/unless}}        
        {{/each}}
      {{/pages}}
    </ul>

  </div>
</div>
