<div class="row partial {{ type }} {{ name }} {{#if divide}}
    divide
  {{/if}}">
  <div class="grid-full">
    <form id="form-contact" class="contact__form" action="{{url}}" method="{{method}}">
      <h3>{{ title }}</h3>
      {{#if content}} <p>{{{content}}}</p> {{/if}}
      <input type="text" name="name" class="contact__field contact__field--name" placeholder="Namn">
      <input type="email" name="email" class="contact__field" placeholder="E-mail" required="required">
      <textarea required="required" class="contact__field contact__field--full" name="text" placeholder="Meddelande" rows="4"></textarea>
      <div class="button button--submit">
        <input type="submit" value="Skicka meddelande">
      </div>
    </form>
  </div>
</div>
