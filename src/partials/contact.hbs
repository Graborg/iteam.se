<div class="row {{ type }} {{ name }} {{#if divide}}
    divide
  {{/if}}">
  <div class="grid-full">
    <form id="form-contact" action="{{url}}" method="{{method}}">
      <h3>{{ title }}</h3>
      {{#if content}} <p>{{{content}}}</p> {{/if}}
      <input type="text" name="name" class="name" placeholder="Namn">
      <input type="email" name="email" placeholder="E-mail" required="required">
      <textarea required="required" name="text" placeholder="Meddelande" rows="4"></textarea>
      <div class="submit">
        <i style="animation-delay: 0.5s; animation-duration: 2s;" class="ion-ios7-email-outline animated bounce-in animate" data-delay="0.5s" data-duration="2s"></i>
        <input type="submit" value="Skicka meddelande">
      </div>
    </form>
  </div>
</div>