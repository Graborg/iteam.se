<div
  class="
    row
    partial
    fullview
    no-overlay
    selected-cases-fullview
    {{#if color}} color-{{{color}}} {{/if}}
    {{#if background-color}} background-{{{background-color}}} {{/if}}
  ">
  <div class="fullview__overlay">
    <div class="grid-fullwidth">
      <div class="fullview__content selected-cases">
        {{#selectedCases cases=cases default=default}}
          {{#each data}}
            <div class="selected-cases__block{{#unless thumbnail}} no-image{{/unless}}">
              <div class="selected-case">
                <a href="{{ url }}" class="selected-case__element">
                  <span class="selected-case__overlay"></span>
                  {{#if thumbnail}}
                    <img class="selected-case__image" src={{ thumbnail }} />
                  {{/if}}

                  <h3 class="selected-case__title">{{ subtitle }}</h3>
                </a>
              </div>
            </div>
          {{/each}}
        {{/selectedCases}}
      </div>
    </div>
  </div>
</div>
