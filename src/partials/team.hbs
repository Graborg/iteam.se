<div class="row partial {{ type }} {{ background }} {{#if center}} center {{/if}}" style="{{#if background-color}} background: {{ background-color }}; {{/if}} {{#if color}} color: {{ color }}; {{/if}}">
  <div class="grid-full">
    {{#if title}}
      <h3>{{ title }}</h3>
    {{/if}}
    {{#if text}}
      <p>{{ text }}</p>
    {{/if}}
    <ul class="team__team">
      {{#team this}}
        {{#each data}}
          <li class="team__team-member">
            {{> coworker this}}
          </li>
        {{/each}}
      {{/team}}
    </ul>
  </div>
</div>
