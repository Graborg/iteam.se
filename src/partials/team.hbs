<div class="row partial {{ type }} {{ background }}"
     style="
{{#if background-color}}
  background-color: {{{ hexFromString background-color }}};
{{/if}}
{{#if color}}
  color: {{{ hexFromString color }}};
{{/if}}">
  <div class="grid-full">
    {{#if title}}
      <h3>{{ title }}</h3>
    {{/if}}
    {{#if text}}
      <p>{{ text }}</p>
    {{/if}}
    <ul class="team__team{{#if small}} small{{/if}}{{#if centered}} centered{{/if}}">
      {{#team this}}
        {{#each data}}
          <li class="team__team-member">
            {{> coworker this}}
          </li>
        {{/each}}
      {{/team}}
    </ul>
  </div>
</div>
