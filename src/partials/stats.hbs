<div class="row {{ type }} {{ background }}" style="{{#if background-color}}background: {{ background-color }}; {{/if}} {{#if color}} color: {{ color }} {{/if}} {{#if background-image}} background-image: {{ background-image }}; {{/if}}">
  <div class="grid-full">
    {{#if title}}
      <h3>{{ title }}</h3>
    {{/if}}
    {{#if description}}
      <p>{{ description }}</p>
    {{/if}}
    <ul>
    {{#each items}}
      <li>
        {{#if icon}}
          <i class="{{ icon }}"></i>
        {{/if}}
        <div class="number">{{ number }}</div>
        <div class="text">{{ text }}</div>
      </li>
    {{/each}}    
    </ul>
  </div>
</div>