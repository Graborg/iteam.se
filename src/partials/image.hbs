<div
  class="box partial image {{{classList this}}}"
  style="{{{styleHelper this}}}">

  {{#if overlay}}
    <div class="image__overlay {{overlay}}"></div>
  {{/if}}

  {{#if start}}
    <div class="{{ type }}__content grid-full">
      <div class="{{ type }}__title {{#if animate}} animate fadeInUp {{/if}}">
        <h1 class="{{ type }}__tile-main">
          {{{ title }}}
          {{#if sub-title}}
            <small class="{{ type }}__tile-sub">{{sub-title}}</small>
          {{/if}}
          {{#if email}}
            <small class="{{ type }}__tile-email">{{{email}}}</small>
          {{/if}}
          {{#if phone}}
            <small class="{{ type }}__tile-phone">{{{phone}}}</small>
          {{/if}}
        </h1>
      </div>

      {{#if image }}
        <img src="{{ image.src }}" alt="{{ image.alt }}">
      {{/if}}

      {{#if hasDown}}
        <div
          class="image__down-arrow"
          {{#if down-bg}}
            style="background: {{{ hexFromString down-bg }}}; color: {{{ hexFromString down-color }}}"
          {{/if}}>
          <i class="ion-chevron-down"></i>
        </div>
      {{/if}}
    </div>
  {{else}}
    {{#if image }}
      <img src="{{ image.src }}" alt="{{ image.alt }}">
    {{/if}}
  {{/if}}
</div>
